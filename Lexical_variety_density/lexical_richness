from lexicalrichness import LexicalRichness
import sys 

tokens = []
types = []
TTR = []

def richness(input_text):
  tokens.append(LexicalRichness(input_text).words)
  types.append(LexicalRichness(input_text).terms)
  TTR.append(LexicalRichness(input_text).ttr)

  print("Number of tokens:", tokens)
  print("Number of types:", types)
  print("Type-token ratio:", TTR)

input_text = sys.argv[1]

richness(input_text)
